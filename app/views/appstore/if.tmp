        <!-- Instance form  -->
        <section class="short-form full">
            <div class="form-row">
                <div class="col label">
                    <label for="">Service name:</label>
                </div>
                <div class="col input">
                    <input type="text" placeholder="OpenStack Testbed" ng-model="ServiceAdd.instance.name">
                    <div class="error arrow-up" ng-show="ServiceAdd.errors.name">
                        <ul class="error-list">
                            <li ng-repeat="error in ServiceAdd.errors.name">{{ error }}</li>
                        </ul>
                    </div>
                </div>
                <div class="col description">
                    <article class="light-description">
                        Name of the service
                    </article>
                </div>
            </div>
            <div class="form-row">
                <div class="col label">
                    <label for="">Auth URL:</label>
                </div>
                <div class="col input">
                    <input type="text" placeholder="http://keystone.example.com:5000/v2.0" ng-model="ServiceAdd.instance.auth_url">
                    <div class="error arrow-up" ng-show="ServiceAdd.errors.auth_url">
                        <ul class="error-list">
                            <li ng-repeat="error in ServiceAdd.errors.auth_url">{{ error }}</li>
                        </ul>
                    </div>
                </div>
                <div class="col description">
                    <article class="light-description">
                        URL of supported OpenStack Keystone
                    </article>
                </div>
            </div>
        </section>
        <!-- /Instance form -->
