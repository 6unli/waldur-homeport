{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "baseUrl": ".",
    "paths": {
      "@waldur/*": ["app/scripts/components/*"]
    },
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "./app/scripts/components/**/*"
  ]
}
